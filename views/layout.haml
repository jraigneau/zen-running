  %body

    #header
      #wrapHeader
        #logo
          %h1
            %a(href='/')ZenRunnin'
        #menu
          %ul
            - if logged_in?
              %li
                %a(href="/")Mes courses
              %li
                %a(href="/friends")Mes amis
              %li 
                %a(href='/logout')Déconnexion
            - else
              %li
                %a{:href => oauth.url_for_oauth_code(:permissions => [:publish_stream]) }Connexion


    #content
      - if flash.has? :notice
        #flash_notice= flash[:notice]
      - if flash.has? :error
        #flash_error= flash[:error]
      = yield

